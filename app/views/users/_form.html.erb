<%= form_with(model: @user) do |form| %>

  <div>
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :username, placeholder: "Enter a username" %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email, placeholder: "Enter your email address" %>
  </div>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password, placeholder: "Choose a password" %>
  </div>

  <div>
    <%= form.submit(@user.new_record? ? "Sign Up" : "Update Account") %>
  </div>
<% end %>
