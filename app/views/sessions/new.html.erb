<h1>Log IN </h1>
<%=flash[:alert]%>
<%= form_with(scope: :session, url: login_path , local: true) do |form| %>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email, placeholder: "Enter your email address" %>
  </div>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password, placeholder: "Enter your password" %>
  </div>

  <div>
    <%= form.submit "Log in" %>
  </div>
<% end %>
